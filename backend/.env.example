# ── Psynova Backend Environment Variables (Example) ──
# Copy this file to .env and fill in the actual values

# MongoDB
MONGODB_URL=mongodb://localhost:27017/your_db_name
MONGODB_DB_NAME=psynova

# JWT
SECRET_KEY=your-secret-key-at-least-64-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
REMEMBER_ME_EXPIRE_DAYS=30

# OTP
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_MAX_RESENDS_PER_HOUR=3

# Rate Limiting
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW_MINUTES=15
AUTO_BLOCK_AFTER_FAILURES=10

# Email (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here